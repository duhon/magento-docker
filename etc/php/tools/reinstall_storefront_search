#!/bin/bash
shopt -s extglob

source /var/www/magento-docker/.env
export $(cut -s -d= -f1 /var/www/magento-docker/.env)

rm -rf app/etc/env.php app/etc/config.php

bash dev/tools/make_standalone_app.sh
composer install

bin/command storefront:search:init \
    --magento-db-host=db --magento-db-name=magento2 --magento-db-user=root \
    --magento-db-password="" \
    --magento-es-engine="elasticsearch7" --magento-es-hostname="elastic" --magento-es-index-prefix="magento2"
